{
  "name": "faq-glossary",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "wrangler deploy --dry-run",
    "deploy": "wrangler deploy",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 execute faq-glossary-db --local --file=migrations/0001_initial.sql",
    "db:migrate:remote": "wrangler d1 execute faq-glossary-db --file=migrations/0001_initial.sql",
    "admin:dev": "cd admin && npm run dev",
    "admin:build": "cd admin && npm run build"
  },
  "dependencies": {
    "hono": "^4.7.0",
    "drizzle-orm": "^0.38.0",
    "@floating-ui/dom": "^1.6.0"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.0",
    "@cloudflare/workers-types": "^4.20250109.0",
    "drizzle-kit": "^0.30.0",
    "vitest": "^3.0.0",
    "wrangler": "^4.0.0",
    "typescript": "^5.7.0"
  }
}
